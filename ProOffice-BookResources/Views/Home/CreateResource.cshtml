@using ProOffice_BookResources.ViewModels;

@model ResourceViewModel

@{
    ViewData["Title"] = "Create Resource";
}

<form asp-action="CreateResource" method="post">

    <h1 class="mb-5">Create Resource</h1>
    <hr />

    <div class="row">
        <div class="col-10 m-auto">
            <div class="col-lg-6 col-12 m-auto">
                <div class="form-group form-floating">
                    <input type="text" asp-for="Name" class="form-control required" placeholder="Name">
                    <label asp-for="Name"></label><br>
                    <span asp-validation-for="Name" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="col-lg-6 col-12 m-auto">
                <div class="form-group form-floating">
                    <input type="number" asp-for="Quantity" class="form-control required" placeholder="Quantity">
                    <label asp-for="Quantity"></label><br>
                    <span asp-validation-for="Quantity" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Назад</a>
                <input type="submit" class="btn btn-success" value="Зачувај" />
            </div>
        </div>
    </div>

</form>
<partial name="~/Views/Shared/_AlertView.cshtml" />